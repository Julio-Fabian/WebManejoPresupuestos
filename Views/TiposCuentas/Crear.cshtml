@model TiposCuentas

@{
    ViewData["Title"] = "Nuevo Tipo Cuenta";
}

<h1>Crear nuevo tipo cuenta.</h1>

<h5>El tipo de cuenta se refiere a como clasificamos las cuentas
    tales como: Préstamos, trajetas de crédito, etc.
</h5>

<!-- Contiene toda la informacion referente a los errores de validacion. eb este caso de todo el modelo -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3"> 
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <!-- Con este span mostramos el mensaje de validacion del campo "Nombre" -->
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<!-- secciones de codigo alijadas en lugares especificos del layout -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
