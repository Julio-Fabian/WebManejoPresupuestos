@model TiposCuentas

@{
    ViewData["Title"] = "Editar tipo cuenta";
}

<h1>Editar tipo cuenta: @Model.Nombre</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar">
    <!-- ID OCULTO DEL USUARIO QUE QUEREMOS ACTUALIZAR -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3"> 
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <!-- Con este span mostramos el mensaje de validacion del campo "Nombre" -->
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

<!-- secciones de codigo alijadas en lugares especificos del layout -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}